---
import { Image } from 'astro:assets';

const { post } = Astro.props;
---

<a href={`blog/${post.slug}`} class="card text-decoration-none">

  <div class="row g-0">
    <div class="col-md-5 col-lg-3">
      <Image inferSize src={post.data.image} class="img-fluid rounded" alt={post.data.title} />
    </div>
    <div class="col-md-7 col-lg-9">
      <div class="card-body">
        <h5 class="card-title">
          {post.data.title}
        </h5>
        <div class="card-text d-flex flex-row gap-1 text-body-secondary">
          <p>{post.data.author}</p>
          <span> &bull; </span>
          <time datetime={post.data.publishedAt}>
            {post.data.publishedAt}
          </time>
        </div>
        <div class="card-text d-flex flex-row align-items-center gap-2">
          <small>Tags: </small>
          {post.data.tags && (
            <div class="d-flex flex-wrap gap-1">
              {post.data.tags.map((tag: string) => (
                <span class="badge bg-secondary">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
  <!-- <small>Published on {post.data.date.toLocaleDateString()}</small> -->

</a>