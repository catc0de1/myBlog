---
import { getCollection } from 'astro:content';

import CategoryLayout from '../../layouts/CategoryLayout.astro';
import Slider from '../../components/Slider.astro';
const blogPosts = await getCollection('blog');
---

<CategoryLayout 
  title="ZtackDev - CheatSheet"
  description="Selamat datang di ZtackDev di section blog cheat sheet, tempat dimana terdapat cheat sheet berguna bagi developer hingga programmer umum. Bagian cheat sheet ini berisi tentang sedikit pengertian, penjelasan detail terkait cheat sheet, dan rankuman dari cheat sheet itu sendiri."
  category="Cheatsheet"
  heading="Articles - Cheat Sheets"
>

  <Slider post={blogPosts.filter((post) => post.data.isPinned)} />

</CategoryLayout>